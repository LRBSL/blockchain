{
    "name": "server",
    "version": "1.0.0",
    "description": "REST Api for LRBSL system",
    "main": "./dist/app.js",
    "scripts": {
        "start": "npm run build && pm2-runtime pm2.config.json",
        "start:daemon": "pm2 startOrRestart pm2.config.json --no-daemon",
        "runtime": "npm run build-ts",
        "serve": "node dist/app.js",
        "watch-ts": "tsc -w",
        "build-ts": "rm -rf dist/ && tsc",
        "stop": "pm2 stop pm2.config.json",
        "tsc": "tsc",
        "clean": "rimraf dist client",
        "refresh": "./node_modules/pm2/bin/pm2 stop 0 && ./node_modules/pm2/bin/pm2 start 0",
        "build": "npm run clean && tsc",
        "prepare": "npm run build"
    },
    "author": "Ravindu Sachintha",
    "license": "ISC",
    "dependencies": {
        "@worldsibu/convector-adapter-fabric": "~1.3.3",
        "@worldsibu/convector-storage-couchdb": "~1.3.3",
        "bcrypt": "^3.0.8",
        "body-parser": "^1.18.3",
        "config": "^1.30.0",
        "dotenv": "^6.0.0",
        "express": "^4.16.3",
        "express-joi-validator": "^2.0.1",
        "express-jwt": "^5.3.1",
        "express-winston": "^4.0.2",
        "fabric-ca-client": "~1.4.0",
        "fabric-client": "~1.4.0",
        "grpc": "^1.18.0",
        "http-status-codes": "^1.4.0",
        "joi": "^14.3.1",
        "jsonwebtoken": "^8.5.1",
        "land-cc": "^0.1.0",
        "morgan": "^1.9.1",
        "mysql": "^2.18.1",
        "node-couchdb": "^1.3.0",
        "node-mailjet": "^3.3.1",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.22",
        "winston": "^3.2.1",
        "x509": "^0.3.3"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.1",
        "@types/express": "^4.17.2",
        "@types/joi": "^14.3.4",
        "mocha": "^5.2.0",
        "pm2": "^3.4.1",
        "rimraf": "^2.6.2",
        "ts-node": "^7.0.0",
        "typescript": "2.9.2"
    }
}
